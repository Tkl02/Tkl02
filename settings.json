{
    "breadcrumbs.enabled": false, // Ativa/desativa breadcrumbs (navegação de símbolos/arquivos acima do editor)
    "editor.fontFamily": "'Fira Code', 'Courier New', monospace", // Fonte usada no editor
    "editor.fontLigatures": true, // Habilita ligaturas de fonte
    "editor.fontSize": 14.5, // Tamanho da fonte no editor (px)
    "editor.lineHeight": 1.8, // Altura da linha (multiplicador ou px)
    "editor.minimap.enabled": false, // Mostra/oculta o minimapa do editor
    "editor.renderLineHighlight": "gutter", // Como a linha atual é destacada (ex.: 'gutter', 'line', 'all', 'none')
    "editor.scrollbar.horizontal": "hidden", // Visibilidade da barra de rolagem horizontal
    "editor.scrollbar.vertical": "hidden", // Visibilidade da barra de rolagem vertical
    "editor.wordWrap": "on", // Ativa quebra automática de linha
    "editor.wordWrapColumn": 80, // Coluna alvo/limite para quebra de linha
    "explorer.compactFolders": false, // Mostra/oculta pastas em modo compacto no Explorer
    "github.copilot.enable": {
        "*": false
    }, // Habilita/desabilita GitHub Copilot por escopo (aqui desativado globalmente)
    "gitlens.ai.model": "vscode", // Modelo AI utilizado pelo GitLens
    "terminal.integrated.defaultProfile.windows": "PowerShell", // Perfil padrão do terminal no Windows
    "terminal.integrated.tabs.location": "left", // Posição das abas do terminal integrado
    "window.commandCenter": false, // Habilita/desabilita o Command Center (painel de comandos)
    "window.menuBarVisibility": "toggle", // Visibilidade da barra de menus ('toggle', 'visible', 'hidden')
    "window.title": "Vs code - ${profileName}", // muda o titulo da barra
    "workbench.activityBar.location": "top", // Tema de cores do Workbench
    "workbench.editor.editorActionsLocation": "hidden", // Local das ações do editor (ex.: 'titleBar')
    "workbench.editor.enablePreview": true, // Habilita/desabilita preview ao abrir arquivos
    "workbench.editor.labelFormat": "short", // Formato dos rótulos dos editores (short, medium, long)
    "workbench.iconTheme": "symbols", // Tema de ícones do Workbench
    "workbench.layoutControl.enabled": false, // Habilita controle de layout do Workbench
    "workbench.startupEditor": "none", // O que abrir ao iniciar o Workbench (ex.: 'welcome', 'none')
    "workbench.statusBar.visible": false, // Mostra/oculta a barra de status na parte inferior do Workbench
    "terminal.integrated.hideOnStartup": "always", // Oculta o terminal integrado ao iniciar o VS Code
    "terminal.integrated.enablePersistentSessions": false, // Desabilita sessões persistentes do terminal integrado
    "github.copilot.nextEditSuggestions.enabled": true, // Habilita sugestões de edição do GitHub Copilot
    "editor.formatOnSave": true, // Formata automaticamente o arquivo ao salvar
    "workbench.colorTheme": "Min Darkest", // Define o tema de cores do Workbench como 'Min Darkest'
    "chat.commandCenter.enabled": false, // Desabilita o chat no Command Center
}
